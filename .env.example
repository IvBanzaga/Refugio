# ===================================
# CONFIGURACIÓN GENERAL
# ===================================

APP_ENV=development
APP_DEBUG=true

# ===================================
# BASE DE DATOS
# ===================================

DB_HOST=localhost
DB_PORT=3306
DB_NAME=refugio
DB_USER=root
DB_PASS=

# ===================================
# CONFIGURACIÓN DE EMAIL DEL REFUGIO
# ===================================
# 
# IMPORTANTE: Este archivo contiene información sensible.
# NO subir este archivo al repositorio (agregar a .gitignore)
#

# Email del Administrador (donde llegan las notificaciones)
ADMIN_EMAIL=admin@refugio.com
ADMIN_NAME=Administrador del Refugio

# Email del Sistema (desde donde se envían los correos)
FROM_EMAIL=noreply@refugio.com
FROM_NAME=Sistema de Reservas - Refugio

# Nombre del Refugio
REFUGIO_NAME=Refugio de Montaña

# URL Base del Sistema (sin barra final)
BASE_URL=http://localhost/refugio

